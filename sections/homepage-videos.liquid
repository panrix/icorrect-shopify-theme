{% comment %}
  Section: Homepage Videos
  Fixed 3 YouTube Shorts embeds, with editable heading + subtitle, and Shopify color scheme support.
{% endcomment %}

{%- style -%}
  .homepage-videos-{{ section.id }}{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  /* IMPORTANT: this replaces Dawn's .page-width cap */
  .homepage-videos-{{ section.id }} .homepage-videos__container{
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    width: 100%;
  }

  /* LEFT aligned header */
  .homepage-videos-{{ section.id }} .homepage-videos__header{
    text-align: left;
    margin: 0 0 40px 0;
    max-width: 760px;
  }

  .homepage-videos-{{ section.id }} .homepage-videos__heading{
    font-size: 34px;
    margin: 0 0 10px 0;
  }

  .homepage-videos-{{ section.id }} .homepage-videos__subtitle{
    margin: 0;
    font-size: 16px;
    line-height: 1.5;
    opacity: 0.85;
  }

  .homepage-videos-{{ section.id }} .homepage-videos__grid{
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 40px;
  }

  .homepage-videos-{{ section.id }} .homepage-videos__card{
    width: 100%;
  }

  /* 9:16 vertical container */
  .homepage-videos-{{ section.id }} .homepage-videos__item{
    position: relative;
    padding-bottom: 177.78%;
    border-radius: 12px;
    overflow: hidden;
    background: #000;
  }

  .homepage-videos-{{ section.id }} .homepage-videos__item iframe{
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  .homepage-videos-{{ section.id }} .homepage-videos__title{
    margin: 12px 0 0 0;
    font-size: 16px;
    line-height: 1.3;
  }
{%- endstyle -%}

<section class="homepage-videos-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="homepage-videos__container">
    <div class="homepage-videos__header">
      <h2 class="homepage-videos__heading">
        {{ section.settings.heading | escape }}
      </h2>

      {%- if section.settings.subtitle != blank -%}
        <p class="homepage-videos__subtitle">
          {{ section.settings.subtitle | escape }}
        </p>
      {%- endif -%}
    </div>

    <div class="homepage-videos__grid">
      <div class="homepage-videos__card">
        <div class="homepage-videos__item">
          <iframe
            src="https://www.youtube.com/embed/9Wemn_gR5IE"
            title="Homepage Video 1"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen
          ></iframe>
        </div>
        <p class="homepage-videos__title">
          {{ section.settings.video_1_title | escape }}
        </p>
      </div>

      <div class="homepage-videos__card">
        <div class="homepage-videos__item">
          <iframe
            src="https://www.youtube.com/embed/SVbeyRWUeh0"
            title="Homepage Video 2"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen
          ></iframe>
        </div>
        <p class="homepage-videos__title">
          {{ section.settings.video_2_title | escape }}
        </p>
      </div>

      <div class="homepage-videos__card">
        <div class="homepage-videos__item">
          <iframe
            src="https://www.youtube.com/embed/SdkVy0q5XsQ"
            title="Homepage Video 3"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen
          ></iframe>
        </div>
        <p class="homepage-videos__title">
          {{ section.settings.video_3_title | escape }}
        </p>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Homepage Videos",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Title",
      "default": "Behind the scenes"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Watch our videos to understand common repair issues, what to expect, and how we fix your device with care."
    },
    {
      "type": "text",
      "id": "video_1_title",
      "label": "Video 1 title (under video)",
      "default": "Homepage Video 1"
    },
    {
      "type": "text",
      "id": "video_2_title",
      "label": "Video 2 title (under video)",
      "default": "Homepage Video 2"
    },
    {
      "type": "text",
      "id": "video_3_title",
      "label": "Video 3 title (under video)",
      "default": "Homepage Video 3"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Homepage Videos"
    }
  ]
}
{% endschema %}