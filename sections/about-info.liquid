<section class="about-info-{{ section.id }}">
  <div class="about-info-wrapper page-width">
    <div class="about-info-row">
      <h2>{{ section.settings.heading }}</h2>

      <div class="about-details">
        {{ section.settings.details }}
      </div>

      {% if section.settings.btn != blank %}
        <div class="read-more-btn">
          <a href="{{ section.settings.link }}">{{ section.settings.btn }}</a>
        </div>
      {% endif %}

      {% if section.settings.btn_2 != blank %}
        <div class="show-more-btn">
          <a href="{{ section.settings.link_2 }}">{{ section.settings.btn_2 }}</a>
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .about-info-{{ section.id }}{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    width: 100%;
    background-color: {{ section.settings.bg }};
  }

  .about-info-{{ section.id }} .about-info-wrapper{
    width: 100%;
    margin: 0 auto;
  }

  .about-info-{{ section.id }} .about-info-row h2{
    color: #1D1D1F;
    font-size: {{ section.settings.heading_size_desktop }}px;
    font-weight: 600;
    line-height: {{ section.settings.heading_line_height_desktop }}px;
    text-align: center;
    margin: 0;
    padding: 0 0 24px;
  }

  .about-info-{{ section.id }} .about-details{
    max-width: 800px;
    margin: 0 auto;
  }

  .about-info-{{ section.id }} .about-info-row p{
    color: #333;
    font-size: 17px;
    font-weight: 400;
    line-height: 1.7;
    letter-spacing: 0;
    text-align: left;
    max-width: 100%;
    margin: 0 0 1.25rem;
  }

  .about-info-{{ section.id }} .about-info-row p:last-child{
    margin-bottom: 0;
  }

  .about-info-{{ section.id }} .read-more-btn{
    padding-top: 20px;
    text-align: center;
  }

  .about-info-{{ section.id }} .read-more-btn a{
    display: inline-block;
    text-decoration: none;
    color: #1d1d1f;
    font-size: 16px;
    font-weight: 400;
    line-height: 25.34px;
    letter-spacing: 0.05px;
  }

  @media (min-width: 768px){
    .about-info-{{ section.id }} .show-more-btn{
      display: none;
    }
  }

  @media (max-width: 767px){
    .about-info-{{ section.id }}{
      padding-top: {{ section.settings.mob_padding_top }}px;
      padding-bottom: {{ section.settings.mob_padding_bottom }}px;
    }

    .about-info-{{ section.id }} .about-info-row h2{
      font-size: {{ section.settings.heading_size_mobile }}px;
      line-height: {{ section.settings.heading_line_height_mobile }}px;
      padding: 0 0 20px;
    }

    .about-info-{{ section.id }} .about-info-row p{
      font-size: 16px;
      line-height: 1.65;
    }

    .about-info-{{ section.id }} .show-more-btn{
      text-align: center;
      padding-top: 40px;
      max-width: 120px;
      margin: 0 auto;
    }

    .about-info-{{ section.id }} .show-more-btn a{
      display: flex;
      align-items: center;
      justify-content: center;
      width: 120px;
      height: 43px;
      border-radius: 3px;
      border: 1px solid #1d1d1f;
      font-size: 16px;
      font-weight: 400;
      line-height: 25.34px;
      text-decoration: none;
      color: #1d1d1f;
    }
  }
</style>

