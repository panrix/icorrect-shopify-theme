<section class="repair-template-wrapper page-width">

  <!-- ========= HERO ========= -->
  <div class="repair-hero">
    <h1>{{ section.settings.device_title }}</h1>
    {% if section.settings.device_subtitle != blank %}
      <p class="subtitle">{{ section.settings.device_subtitle }}</p>
    {% endif %}
  </div>


  <!-- ========= QUICK INFO STRIP ========= -->
  <div class="info-strip">
    <div class="info-item">
      <strong>Premium Parts</strong>
      <p>{{ section.settings.parts_quality }}</p>
    </div>

    <div class="info-item">
      <strong>Warranty</strong>
      <p>{{ section.settings.warranty }}</p>
    </div>

    <div class="info-item">
      <strong>Diagnostics</strong>
      <p>{{ section.settings.diagnostics }}</p>
    </div>

    <div class="info-item">
      <strong>Logic-Board Specialists</strong>
      <p>{{ section.settings.logicboard_blurb }}</p>
    </div>

    <div class="info-item">
      <strong>Data Recovery</strong>
      <p>{{ section.settings.data_recovery }}</p>
    </div>
  </div>



  <!-- ========= REPAIR PROCESS ========= -->
  <div class="repair-process">
    <h2>{{ section.settings.process_title }}</h2>
    <p>{{ section.settings.process_text }}</p>

    <div class="steps-grid">
      {% for block in section.blocks %}
        {% if block.type == 'step' %}
          <div class="step">
            {% if block.settings.icon %}
              <img src="{{ block.settings.icon | image_url: width: 120 }}" alt="{{ block.settings.step_title }}">
            {% endif %}
            <h3>{{ block.settings.step_title }}</h3>
            <p>{{ block.settings.step_text }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>



  <!-- ========= COLLECTIONS (Option A - Manual Blocks) ========= -->
  <div class="repair-collections">
    <h2>{{ section.settings.collection_title }}</h2>

    <div class="collection-grid">
      {% for block in section.blocks %}
        {% if block.type == 'collection_block' %}
          {% assign col = block.settings.collection %}
          {% if col %}
            <div class="collection-card">
              <a href="{{ col.url }}">

                {% if col.image %}
                  <img src="{{ col.image | image_url: width: 600 }}" alt="{{ col.title }}">
                {% endif %}

                <h3>{{ col.title }}</h3>
              </a>
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>
  </div>



  <!-- ========= BLOG / VIDEO ========= -->
  <div class="educational-content">
    <h2>{{ section.settings.education_title }}</h2>
    <p>{{ section.settings.education_subtitle }}</p>

    <div class="education-grid">

      {% if section.settings.blog_article != blank %}
        {% assign article = articles[section.settings.blog_article] %}
        <article class="blog-card">
          <a href="{{ article.url }}">
            <h3>{{ article.title }}</h3>
            <p>{{ article.excerpt | strip_html | truncate: 130 }}</p>
          </a>
        </article>
      {% endif %}

      {% if section.settings.video_url != blank %}
        <div class="video-embed">
          <iframe
            src="{{ section.settings.video_url }}"
            frameborder="0"
            allowfullscreen>
          </iframe>
        </div>
      {% endif %}

    </div>
  </div>



  <!-- ========= FAQ ========= -->
  <div class="repair-faq">
    <h2>{{ section.settings.faq_title }}</h2>

    <div class="faq-list">
      {% for block in section.blocks %}
        {% if block.type == 'faq' %}
          <details class="faq">
            <summary>{{ block.settings.question }}</summary>
            <p>{{ block.settings.answer }}</p>
          </details>
        {% endif %}
      {% endfor %}
    </div>
  </div>

</section>




<!-- ========== STYLING ========== -->
<style>
  .repair-template-wrapper { margin: 50px auto; }
  .repair-hero h1 { font-size: 44px; font-weight: 600; margin-bottom: 10px; }
  .subtitle { color: #777; font-size: 18px; margin-bottom: 20px; }

  .info-strip {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    margin-top: 30px;
  }

  .info-item {
    flex: 1 1 200px;
    background: #f5f5f5;
    padding: 20px;
    border-radius: 10px;
  }

  .steps-grid,
  .collection-grid,
  .education-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 30px;
    margin-top: 30px;
  }

  .collection-card img,
  .video-embed iframe {
    border-radius: 12px;
  }

  details summary {
    cursor: pointer;
    font-weight: 600;
    padding: 10px 0;
  }
  details p {
    margin-top: 10px;
  }
</style>

{% schema %}
{
  "name": "Repair Template",
  "settings": [
    { "type": "text", "id": "device_title", "label": "Device Page Title" },
    { "type": "text", "id": "device_subtitle", "label": "Subtitle" },

    { "type": "textarea", "id": "parts_quality", "label": "Parts Quality" },
    { "type": "textarea", "id": "warranty", "label": "Warranty Info" },
    { "type": "textarea", "id": "diagnostics", "label": "Diagnostics Info" },
    { "type": "textarea", "id": "logicboard_blurb", "label": "Logic Board Repair Info" },
    { "type": "textarea", "id": "data_recovery", "label": "Data Recovery Info" },

    { "type": "text", "id": "process_title", "label": "Process Title" },
    { "type": "textarea", "id": "process_text", "label": "Process Description" },

    { "type": "text", "id": "collection_title", "label": "Collections Title", "default": "Related Repairs" },

    { "type": "text", "id": "education_title", "label": "Education Section Title" },
    { "type": "textarea", "id": "education_subtitle", "label": "Education Subtitle" },
    { "type": "article", "id": "blog_article", "label": "Featured Blog Article" },
    { "type": "url", "id": "video_url", "label": "Video URL" },

    { "type": "text", "id": "faq_title", "label": "FAQ Title", "default": "Frequently Asked Questions" }
  ],

  "blocks": [
    {
      "type": "step",
      "name": "Repair Step",
      "settings": [
        { "type": "image_picker", "id": "icon", "label": "Icon" },
        { "type": "text", "id": "step_title", "label": "Step Title" },
        { "type": "textarea", "id": "step_text", "label": "Step Description" }
      ]
    },
    {
      "type": "collection_block",
      "name": "Repair Collection",
      "settings": [
        { "type": "collection", "id": "collection", "label": "Choose Collection" }
      ]
    },
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        { "type": "text", "id": "question", "label": "Question" },
        { "type": "textarea", "id": "answer", "label": "Answer" }
      ]
    }
  ],

  "presets": [
    {
      "name": "Repair Template"
    }
  ]
}
{% endschema %}