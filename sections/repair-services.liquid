<section class="repair-services-{{ section.id }}">
  <div class="repair-services-wrapper page-width">
    <div class="repair-services-info">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.details }}</p>
    </div>
    <div class="repair-services-row">
      {% for block in section.blocks %}
        <div class="repair-service-col">
          <div class="title-icon-row">
            <img src="{{ block.settings.icon | img_url: 'master' }}" alt="{{ block.settings.heading }}">
            <h3>{{ block.settings.heading }}</h3>
          </div>
          <div class="repair-details">
            <p>{{ block.settings.details }}</p>
          </div>
          <div class="repair-service-btn">
            <a href="{{ block.settings.link }}">
              {{ block.settings.btn }}
              <span><img src="https://cdn.shopify.com/s/files/1/0754/5903/5403/files/black-rt-arrow.png?v=1724005968" alt=""></span>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .repair-services-{{ section.id }}{ 
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
    width: 100%;
    background-color: {{ section.settings.bg }};
  }
  .repair-services-info{
    text-align: left;
    width: 100%;
    padding-bottom: 40px;
  }
  .repair-services-info h2{
   color: #1D1D1F;
font-size: 28px;
font-weight: 600;
line-height: 1.3;
text-align: left;
    margin: 0;
    padding: 0;
  }
  .repair-services-info p{
   color: #333;
font-size: 17px;
font-weight: 400;
line-height: 1.65;
letter-spacing: 0;
text-align: left;
margin: 0 0 0.75rem;
    padding: 0;
  }
  .repair-services-info p:last-child{
    margin-bottom: 0;
  }
  .repair-services-row{
    display: flex;
    gap: 30px;
    /* justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap; */
  }
  .repair-service-col{
    /* flex: 32%;
    max-width: 32%; */
    flex: 1;
    text-align: left;
  }
  .title-icon-row{
    display: flex;
    align-items: center;
    column-gap: 10px;
    padding-bottom: 10px;
  }
  .title-icon-row img{
    max-width: 28px;
    height: auto;
  }
  .title-icon-row h3{
    color: #1D1D1F;
font-size: 18px;
font-weight: 600;
line-height: 19px;
letter-spacing: 0.05em;
text-align: left;
margin: 0;
    padding: 0;
    padding-bottom: 0px;
  }
  .repair-details{
    padding-bottom: 12px;
  }
  .repair-details p{
    color: #333;
font-size: 16px;
font-weight: 400;
line-height: 1.65;
letter-spacing: 0;
text-align: left;
margin: 0 0 0.75rem;
    padding: 0;
  }
  .repair-details p:last-child{
    margin-bottom: 0;
  }
  .repair-service-btn{
    text-align: left;
  }
  .repair-service-btn a{
    display: flex;
  column-gap: 5px;
  justify-content: flex-start;
  color: #1D1D1F;
  font-size: 16px;
  font-weight: 400;
  line-height: 25.34px;
  text-align: left;
  text-decoration: none;
  }
  .repair-service-btn a img {
  max-width: 21px;
  height: 9px;
}
  @media(max-width: 767px){
    .repair-services-{{ section.id }}{
      padding-top: {{ section.settings.mob-padding-top }}px;
      padding-bottom: {{ section.settings.mob-padding-bottom }}px;
    }
    .repair-services-info{
      padding-bottom: 30px;
    }
    .repair-services-row{
      display: block;
    }
    .repair-service-col{
    /* flex: 100%;
    max-width: 100%; */
    text-align: left;
    padding-bottom: 30px;
  }
   .repair-services-info h2{
      font-size: 24px;
      font-weight: 600;
      line-height: 1.3;
      padding-bottom: 12px;
    }
   .repair-services-info p{
      
font-size: 16px;
font-weight: 400;
line-height: 1.6;
letter-spacing: 0;
text-align: left;

    }
  }
</style>

