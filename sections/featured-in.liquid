         "default": 100,
         "min": 0,
         "max": 150,
         "step": 5,
         "unit": "px"
       },
       {
         "type": "range",
         "id": "padding-bottom",
         "label": "Bottom Padding",
         "default": 100,
         "min": 0,
         "max": 150,
         "step": 5,
         "unit": "px"
       },
       {
         "type": "text",
         "id": "heading",
         "label": "Heading",
         "default": "We are proud to work with"
       },
       {
         "type": "richtext",
         "id": "details",
         "label": "Description",
         "default": "<p>We specialise in crafting custom-tailored repair solutions for both SMEs and large corporations.</p>"
       },
       {
         "type": "text",
         "id": "btn",
         "label": "Button Label",
         "default": "Interested in joining? Click here"
       },
       {
         "type": "url",
         "id": "link",
         "label": "Link URL"
       }
    ],
  "blocks":[
      {
        "type":"logo",
        "name":"Partner Logo",
        "settings":[
            {
               "type":"image_picker",
               "id":"icon",
               "label":"Logo Image (Use PNG)"
            }
         ]
      }
  ],
  "presets": [
    {
      "name": "Static Partners Grid", 
      "category": "section",
      "blocks": [
        { "type": "logo" },
        { "type": "logo" },
        { "type": "logo" },
        { "type": "logo" }
      ]
    }
  ]
}
{% endschema %}