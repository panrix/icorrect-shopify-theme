<section class="ic-why-section" id="ic-why-{{ section.id }}">
  <div class="page-width">
    
    <!-- Top Row: Text + Stats -->
    <div class="ic-why-top">
      
      <!-- Left: Heading + Description -->
      <div class="ic-why-text">
        <h2 class="ic-why-heading">{{ section.settings.heading }}</h2>
        <div class="ic-why-desc">{{ section.settings.details }}</div>
        {% if section.settings.show_cta %}
          <a href="{{ section.settings.cta_link }}" class="ic-why-cta">
            {{ section.settings.cta_text }}
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
              <path d="M3 8h10M9 4l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        {% endif %}
      </div>

      <!-- Right: Stats Grid -->
      <div class="ic-why-stats">
        
        <!-- Stat 1: Devices Repaired (HARDCODED) -->
        <div class="ic-stat" data-stat="devices">
          <div class="ic-stat-inner">
            <span class="ic-stat-value" data-target="100000" data-type="integer">0</span>
            <span class="ic-stat-label">Devices Repaired</span>
          </div>
        </div>

        <!-- Stat 2: Rating -->
        <div class="ic-stat" data-stat="rating">
          <div class="ic-stat-inner">
            <span class="ic-stat-value" data-target="{{ section.settings.stat_2_num }}" data-type="rating">0</span>
            <div class="ic-stars" role="img" aria-label="{{ section.settings.stat_2_num }} out of 5 stars">
              {% for i in (1..5) %}
                <svg class="ic-star" data-index="{{ i }}" width="18" height="18" viewBox="0 0 24 24" fill="none">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" 
                        stroke="#D1D1D6" stroke-width="1.5" stroke-linejoin="round"/>
                </svg>
              {% endfor %}
            </div>
            <span class="ic-stat-label">Average Rating</span>
          </div>
        </div>

        <!-- Stat 3: Experience -->
        <div class="ic-stat" data-stat="experience">
          <div class="ic-stat-inner">
            <span class="ic-stat-value" data-target="{{ section.settings.stat_3_num }}" data-type="experience">0</span>
            <span class="ic-stat-label">Years Experience</span>
          </div>
        </div>

      </div>
    </div>

    <!-- Bottom: Features Row (HARDCODED) -->
    <div class="ic-why-features">
      
      <div class="ic-feature">
        <div class="ic-feature-icon">
          <img src="https://cdn.shopify.com/s/files/1/0728/7111/7053/files/original_1.png?v=1766156630" alt="" loading="lazy" width="44" height="44">
        </div>
        <span class="ic-feature-text">Original Parts Used</span>
      </div>

      <div class="ic-feature">
        <div class="ic-feature-icon">
          <img src="https://cdn.shopify.com/s/files/1/0728/7111/7053/files/processor.png?v=1766156630" alt="" loading="lazy" width="44" height="44">
        </div>
        <span class="ic-feature-text">Microelectronic Specialists</span>
      </div>

      <div class="ic-feature">
        <div class="ic-feature-icon">
          <img src="https://cdn.shopify.com/s/files/1/0728/7111/7053/files/support.png?v=1766156630" alt="" loading="lazy" width="44" height="44">
        </div>
        <span class="ic-feature-text">Expert Fault Finders</span>
      </div>

      <div class="ic-feature">
        <div class="ic-feature-icon">
          <img src="https://cdn.shopify.com/s/files/1/0728/7111/7053/files/recycle.png?v=1766156630" alt="" loading="lazy" width="44" height="44">
        </div>
        <span class="ic-feature-text">Sustainable Repairs</span>
      </div>

