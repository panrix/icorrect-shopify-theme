<style>
  /* ============================================
     WHY ICORRECT - V2
     ============================================ */

  #ic-why-{{ section.id }} {
    --ic-accent: {{ section.settings.accent_color }};
    --ic-bg: {{ section.settings.bg_color }};
    --ic-text-primary: #1D1D1F;
    --ic-text-secondary: #6E6E73;
    --ic-text-tertiary: #86868B;
    --ic-card-bg: #FFFFFF;
    --ic-border: #E5E5EA;
    --ic-star-gold: #FF9500;
    --ic-star-empty: #D1D1D6;
    
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: var(--ic-bg);
    font-family: -apple-system, BlinkMacSystemFont, "SF Pro Display", "Segoe UI", Roboto, sans-serif;
    -webkit-font-smoothing: antialiased;
  }

  /* ---- TOP LAYOUT ---- */
  .ic-why-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 60px;
    margin-bottom: 60px;
  }

  /* ---- TEXT COLUMN ---- */
  .ic-why-text {
    flex: 0 1 480px;
    max-width: 480px;
  }

  .ic-why-heading {
    font-size: clamp(32px, 5vw, 44px);
    font-weight: 600;
    line-height: 1.1;
    letter-spacing: -0.04em;
    color: var(--ic-text-primary);
    margin: 0 0 20px;
  }

  .ic-why-desc {
    font-size: 17px;
    line-height: 1.6;
    color: var(--ic-text-secondary);
    max-width: 52ch;
    letter-spacing: -0.01em;
  }

  .ic-why-desc p {
    margin: 0;
  }

  .ic-why-cta {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    margin-top: 28px;
    font-size: 17px;
    font-weight: 500;
    color: var(--ic-accent);
    text-decoration: none;
    transition: gap 0.2s ease;
  }

  .ic-why-cta:hover {
    gap: 12px;
  }

  .ic-why-cta svg {
    transition: transform 0.2s ease;
  }

  .ic-why-cta:hover svg {
    transform: translateX(2px);
  }

  /* ---- STATS GRID ---- */
  .ic-why-stats {
    display: flex;
    gap: 16px;
  }

  .ic-stat {
    background: var(--ic-card-bg);
    border-radius: 18px;
    text-align: center;
    border: 1px solid var(--ic-border);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    width: 240px;
    height: 180px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .ic-stat:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
  }

  .ic-stat-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .ic-stat-value {
    font-size: 52px;
    font-weight: 700;
    color: var(--ic-text-primary);
    line-height: 1;
    font-variant-numeric: tabular-nums;
    letter-spacing: -0.03em;
  }

  .ic-stat-label {
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--ic-text-tertiary);
    margin-top: 8px;
  }

  /* ---- STARS ---- */
  .ic-stars {
    display: flex;
    gap: 3px;
    margin: 8px 0 4px;
  }

  .ic-star {
    transition: all 0.3s ease;
  }

  .ic-star path {
    transition: fill 0.4s ease, stroke 0.4s ease;
  }

  .ic-star.filled path {
    fill: var(--ic-star-gold);
    stroke: var(--ic-star-gold);
  }

  .ic-star.partial path {
    fill: url(#star-gradient-{{ section.id }});
    stroke: var(--ic-star-gold);
  }

  /* ---- FEATURES ROW (CENTERED) ---- */
  .ic-why-features {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px 20px;
    padding-top: 48px;
    border-top: 1px solid var(--ic-border);
  }

  .ic-feature {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 14px;
    padding: 12px 0;
  }

  .ic-feature-icon {
    width: 44px;
    height: 44px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ic-feature-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    opacity: 0.9;
    transition: opacity 0.2s ease;
  }

  .ic-feature:hover .ic-feature-icon img {
    opacity: 1;
  }

  .ic-feature-text {
    font-size: 15px;
    font-weight: 600;
    color: var(--ic-text-primary);
    line-height: 1.3;
    letter-spacing: -0.01em;
  }

  /* ============================================
     RESPONSIVE
     ============================================ */

  @media (max-width: 1200px) {
    .ic-why-top {
      gap: 40px;
    }
    
    .ic-stat {
      width: 210px;
      height: 175px;
    }
    
    .ic-stat-value {
      font-size: 46px;
    }
  }

  @media (max-width: 1024px) {
    .ic-why-top {
      flex-direction: column;
      gap: 48px;
    }

    .ic-why-text {
      flex: none;
      max-width: 100%;
      text-align: center;
    }
    
    .ic-why-desc {
      max-width: 60ch;
      margin: 0 auto;
    }

    .ic-why-cta {
      justify-content: center;
    }

    .ic-why-stats {
      justify-content: center;
      width: 100%;
    }
    
    .ic-stat {
      width: 190px;
      height: 170px;
    }
    
    .ic-stat-value {
      font-size: 44px;
    }
  }

  @media (max-width: 768px) {
    #ic-why-{{ section.id }} {
      padding: {{ section.settings.mob_padding_top }}px 0 {{ section.settings.mob_padding_bottom }}px;
    }

    .ic-why-heading {
      font-size: 28px;
    }

    .ic-why-desc {
      font-size: 16px;
    }

    .ic-why-stats {
      flex-direction: column;
      gap: 16px;
      width: 100%;
    }

    .ic-stat {
      width: 100%;
      height: auto;
      padding: 24px 28px;
      flex-direction: row;
      justify-content: space-between;
    }

    .ic-stat-inner {
      flex-direction: row;
      justify-content: space-between;
      width: 100%;
    }

    .ic-stat-value {
      font-size: 32px;
      order: 1;
    }

    .ic-stat-label {
      order: 2;
      margin-top: 0;
      text-align: right;
    }

    .ic-stars {
      order: 1;
      margin: 0 12px 0 0;
    }

    [data-stat="rating"] .ic-stat-inner {
      flex-wrap: wrap;
    }

    [data-stat="rating"] .ic-stat-value {
      width: auto;
    }

    [data-stat="rating"] .ic-stat-label {
      width: 100%;
      text-align: left;
      margin-top: 8px;
      order: 3;
    }

    .ic-why-features {
      grid-template-columns: 1fr;
      gap: 24px;
      padding-top: 40px;
    }

    .ic-feature {
      justify-content: flex-start;
      padding: 8px 0;
    }
  }

  @media (max-width: 480px) {
    .ic-stat {
      padding: 20px 24px;
    }

    .ic-stat-value {
      font-size: 28px;
    }

    .ic-feature-icon {
      width: 40px;
      height: 40px;
    }

    .ic-feature-text {
      font-size: 14px;
    }
  }
</style>

<!-- SVG Gradient for partial stars -->
<svg width="0" height="0" style="position: absolute;">
  <defs>
    <linearGradient id="star-gradient-{{ section.id }}">
      <stop offset="80%" stop-color="#FF9500"/>
      <stop offset="80%" stop-color="#D1D1D6"/>
    </linearGradient>
  </defs>
</svg>

<script>
(function() {
  const section = document.getElementById('ic-why-{{ section.id }}');
  if (!section) return;

  const statsContainer = section.querySelector('.ic-why-stats');
  if (!statsContainer) return;

  let animated = false;

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting && !animated) {
        animated = true;
        animateStats();
        observer.unobserve(entry.target);
      }
    });
  }, { 
    threshold: 0.2,
    rootMargin: '0px 0px -80px 0px'
  });

  observer.observe(statsContainer);

  function animateStats() {
    const stats = statsContainer.querySelectorAll('.ic-stat-value');
    
    stats.forEach(stat => {
      const type = stat.dataset.type;
      const target = parseFloat(stat.dataset.target) || 0;
      const duration = type === 'rating' ? 2200 : 1800;
      const startTime = performance.now();

      function update(currentTime) {
        const elapsed = currentTime - startTime;
        const progress = Math.min(elapsed / duration, 1);
        const ease = 1 - Math.pow(1 - progress, 4);
        const current = target * ease;

        if (type === 'integer') {
          stat.textContent = Math.floor(current).toLocaleString() + '+';
        } else if (type === 'rating') {
          stat.textContent = current.toFixed(1) + '/5';
          updateStars(stat, current);
        } else if (type === 'experience') {
          stat.textContent = Math.floor(current) + '+';
        }

        if (progress < 1) {
          requestAnimationFrame(update);
        } else {
          if (type === 'integer') stat.textContent = target.toLocaleString() + '+';
          if (type === 'rating') stat.textContent = target.toFixed(1) + '/5';
          if (type === 'experience') stat.textContent = target + '+';
        }
      }

      requestAnimationFrame(update);
    });
  }

  function updateStars(statEl, rating) {
    const starsContainer = statEl.parentElement.querySelector('.ic-stars');
    if (!starsContainer) return;

    const stars = starsContainer.querySelectorAll('.ic-star');
    stars.forEach((star, index) => {
      const starIndex = index + 1;
      star.classList.remove('filled', 'partial');
      
      if (rating >= starIndex) {
        star.classList.add('filled');
      } else if (rating > starIndex - 1 && rating < starIndex) {
        star.classList.add('partial');
      }
    });
  }
})();
</script>

