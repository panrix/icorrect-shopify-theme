              }}
            {%- else -%}
              <img src="https://cdn.shopify.com/s/files/1/0728/7111/7053/files/MacBook_Model_Number.png?v=1765884112" 
                   loading="lazy" 
                   alt="MacBook Model Number" 
                   width="1500" 
                   height="auto" 
                   style="width:100%; height:auto; object-fit:cover;">
            {%- endif -%}
