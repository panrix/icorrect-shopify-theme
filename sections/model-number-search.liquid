{%- if section.settings.enable_model_search -%}
<script>
(function(){
  function norm(v){
    return (v || "").toString().trim().toUpperCase().replace(/\s+/g, "");
  }

  function getScopeEl(scopeSelector){
    if (!scopeSelector) return document;
    const candidates = scopeSelector.split(",").map(s => s.trim()).filter(Boolean);
    for (const sel of candidates){
      const el = document.querySelector(sel);
      if (el) return el;
    }
    return document;
  }

  function getCardCandidates(scopeEl){
    const preferred = scopeEl.querySelectorAll("[data-model],[data-device-model],[data-model-number]");
    if (preferred.length) return Array.from(preferred);

    const productLinks = scopeEl.querySelectorAll('a[href*="/products/"]');
    if (productLinks.length){
      return Array.from(productLinks).map(a => a.closest("li.grid__item, .grid__item") || a);
    }

    return Array.from(scopeEl.querySelectorAll("li.grid__item, .grid__item"));
  }

  function getCardWrapper(node){
    return node.closest("li.grid__item") || node.closest(".grid__item") || node;
  }

  /* STRICT: only real product grid containers */
  function getGridWrap(el){
    if (!el) return null;
    const sel = [
      "ul#product-grid",
      "ul.product-grid",
      "div#product-grid",
      ".product-grid",
      "[id^='product-grid']"
    ].join(",");
    return el.closest(sel);
  }

  function findMatches(scopeEl, query){
    const q = norm(query);
    if (!q) return [];
    const cards = getCardCandidates(scopeEl);
    const matches = [];

    for (const el of cards){
      const attr =
        el.getAttribute("data-model") ||
        el.getAttribute("data-device-model") ||
        el.getAttribute("data-model-number") ||
        "";

      const hayAttr = norm(attr);
      const hayText = norm(el.textContent || "");

      if ((hayAttr && hayAttr.includes(q)) || hayText.includes(q)){
        matches.push(el);
      }
    }
    return matches;
  }

  function init(){
    const root = document.getElementById("ImageWithText--{{ section.id }}");
    if (!root) return;

    const wrapper = root.querySelector(".ic-model-search");
    if (!wrapper) return;

    const input = wrapper.querySelector(".ic-model-search__input");
    const btn = wrapper.querySelector(".ic-model-search__btn");
    const err = wrapper.querySelector(".ic-model-search__error");

    const scopeSelector = wrapper.getAttribute("data-scope-selector") || "";
    const scopeEl = getScopeEl(scopeSelector);

    let activeCards = [];
    let activeGrid = null;
    let lastAppliedQuery = "";

    function showError(msg){
      err.textContent = msg;
      err.classList.add("is-visible");
    }
    function clearError(){
      err.textContent = "";
      err.classList.remove("is-visible");
    }

    function clearFilters(){
      scopeEl.querySelectorAll(".ic-model-filter-hidden").forEach(el => el.classList.remove("ic-model-filter-hidden"));
    }

    function applyFilter(query){
      const q = norm(query);
      const cards = getCardCandidates(scopeEl);

      cards.forEach(el => {
        const attr =
          el.getAttribute("data-model") ||
          el.getAttribute("data-device-model") ||
          el.getAttribute("data-model-number") ||
          "";
        const hay = norm(attr || "") + " " + norm(el.textContent || "");

        if (!q){
          el.classList.remove("ic-model-filter-hidden");
          return;
        }

        if (hay.includes(q)){
          el.classList.remove("ic-model-filter-hidden");
        } else {
          el.classList.add("ic-model-filter-hidden");
        }
      });
    }

    function clearActive(){
      if (activeCards.length){
        activeCards.forEach(card => {
          card.classList.remove("ic-model-spotlight-item");
          card.classList.remove("ic-model-match-highlight");
        });
        activeCards = [];
      }

      if (activeGrid){
        activeGrid.classList.remove("ic-model-grid-spotlight", "ic-model-grid--single", "ic-model-grid--multi");
        activeGrid = null;
      }

      lastAppliedQuery = "";
    }

    function run(){
      const raw = input.value || "";
      const q = norm(raw);

      clearError();

      if (!q){
        clearFilters();
        clearActive();
        return;
      }

      applyFilter(raw);

      const matches = findMatches(scopeEl, raw);
      if (!matches.length){
        clearActive();
        showError("We could not find that model on this page. Check the model number and try again. If the model number is correct, it means that we unfortunately do not service your device.");
        return;
      }

      clearActive();

      const wrappers = matches.map(getCardWrapper);

      /* Tag ONLY the real product grid */
      const gridWrap = getGridWrap(wrappers[0]);

      if (gridWrap){
        gridWrap.classList.add("ic-model-grid-spotlight");
        gridWrap.classList.remove("ic-model-grid--single", "ic-model-grid--multi");
        gridWrap.classList.add(wrappers.length > 1 ? "ic-model-grid--multi" : "ic-model-grid--single");
        activeGrid = gridWrap;
      }

      wrappers.forEach(card => {
        card.classList.add("ic-model-spotlight-item");
        card.classList.add("ic-model-match-highlight");
      });

      activeCards = wrappers;
      lastAppliedQuery = q;

      wrappers[0].scrollIntoView({ behavior: "smooth", block: "center" });
    }

    btn.addEventListener("click", function(e){
      e.preventDefault();
      run();
    });

    input.addEventListener("keydown", function(e){
      if (e.key === "Enter"){
        e.preventDefault();
        run();
      }
    });

    input.addEventListener("input", function(){
      const q = norm(input.value);

      if (!q){
        clearError();
        clearFilters();
        clearActive();
        return;
      }

      if (lastAppliedQuery && q !== lastAppliedQuery){
        clearActive();
        clearError();
        clearFilters();
      }
    });
  }

  if (document.readyState === "loading"){
    document.addEventListener("DOMContentLoaded", init);
  } else {
    init();
  }
})();
</script>
{%- endif -%}

