{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Search UI */
  .ic-model-search{ margin-top:18px; max-width:620px; width:100%; }
  .ic-model-search__row{ display:flex; gap:10px; align-items:stretch; width:100%; }
  .ic-model-search__input{
    flex:1 1 auto; width:100%; min-width:260px;
    padding:12px 14px; border:1px solid rgba(0,0,0,.18);
    border-radius:8px; font-size:14px; line-height:18px;
  }
  .ic-model-search__btn{
    flex:0 0 auto; padding:12px 18px; border-radius:8px;
    border:2px solid #1d1d1f; background:transparent; color:#1d1d1f;
    font-size:14px; line-height:18px; cursor:pointer; white-space:nowrap;
  }
  .ic-model-search__btn:hover{ background:rgba(0,0,0,.04); }
  .ic-model-search__error{ margin-top:8px; font-weight:700; color:#c40000; display:none; }
  .ic-model-search__error.is-visible{ display:block; }

  .ic-model-filter-hidden{ display:none !important; }

  @media (max-width: 749px){
    .ic-model-search{ max-width:100%; }
    .ic-model-search__row{ flex-direction:column; align-items:stretch; gap:12px; }
    .ic-model-search__input{ min-width:0; width:100%; }
    .ic-model-search__btn{ width:100%; }
  }

  /* Highlight */
  .ic-model-match-highlight{ outline:none !important; }
  .ic-model-match-highlight > *{
    /* Red outline removed here */
    outline: none !important;
    border-radius:8px;
  }

  /*
    Spotlight layout
    IMPORTANT: we only style the real product grid element that JS tags with .ic-model-grid-spotlight
  */
  .ic-model-grid-spotlight{
    display:flex !important;
    flex-wrap:wrap !important;
    justify-content:center !important;
    align-items:flex-start !important;

    width:100% !important;
    max-width:100% !important;

    margin-left:0 !important;
    margin-right:0 !important;

    column-gap:28px !important;
    row-gap:28px !important;

    overflow-x:clip !important;
  }

  @media (max-width: 749px){
    .ic-model-grid-spotlight{ column-gap:18px !important; row-gap:18px !important; }
  }

  /* Reset Dawn grid negative offsets on UL.product-grid specifically */
  .ic-model-grid-spotlight.grid,
  .ic-model-grid-spotlight.product-grid{
    margin-left:0 !important;
    margin-right:0 !important;
  }

  .ic-model-grid-spotlight > *{
    padding-left:0 !important;
    padding-right:0 !important;
    max-width:100% !important;
  }

  /* Item sizing */
  .ic-model-spotlight-item{
    width:100% !important;
    max-width:520px !important;
    flex:0 1 520px !important;
    margin:0 !important;
  }

  /* SINGLE: force the one item to sit centered */
@media (max-width: 749px){
  .ic-model-grid-spotlight.ic-model-grid--single .ic-model-spotlight-item,
  .ic-model-grid-spotlight.ic-model-grid--multi .ic-model-spotlight-item{
    flex: 1 1 auto !important;
    width: 100% !important;
    max-width: calc(100vw - 32px) !important;
    margin-left: auto !important;
    margin-right: auto !important;
  }
}

  @media (max-width: 749px){
    .ic-model-spotlight-item{
      flex-basis:100% !important;
      max-width:520px !important;
    }
    .ic-model-grid-spotlight.ic-model-grid--single .ic-model-spotlight-item{
      flex:0 0 100% !important;
      max-width:520px !important;
    }
  }

  /* Contain inner wrappers */
  .ic-model-spotlight-item > *{ width:100% !important; max-width:520px !important; }

  /* Radius and clipping */
  .ic-model-spotlight-item,
  .ic-model-spotlight-item > *{ border-radius:8px !important; }

  .ic-model-spotlight-item .card,
  .ic-model-spotlight-item .card__inner,
  .ic-model-spotlight-item .card__media,
  .ic-model-spotlight-item .card__content,
  .ic-model-spotlight-item .card__information{ border-radius:8px !important; }

  .ic-model-spotlight-item > *,
  .ic-model-spotlight-item .card,
  .ic-model-spotlight-item .card__inner{ overflow:hidden !important; }

  /* --- FIX: mobile card overflow only (does not affect desktop) --- */
@media (max-width: 749px){
  /* keep the spotlight grid inside the viewport */
  .ic-model-grid-spotlight{
    padding-left: 16px !important;
    padding-right: 16px !important;
    box-sizing: border-box !important;
  }

  /* force each spotlight tile to respect the padded container */
  .ic-model-grid-spotlight .ic-model-spotlight-item{
    width: 100% !important;
    max-width: 100% !important;
    box-sizing: border-box !important;
  }

  /* outlines can create horizontal overflow on small screens */
  .ic-model-match-highlight > *{
    outline-offset: 0 !important;
  }
  .ic-model-match-highlight > * > .card,
  .ic-model-match-highlight > * > .card-wrapper,
  .ic-model-match-highlight > * > .card__inner{
    outline-offset: 0 !important;
  }
}
/* --- END FIX --- */
{%- endstyle -%}

