{% comment %}
  Section: Apple Watch Videos
  Fixed 3 YouTube Shorts embeds, with editable heading + subtitle, and Shopify color scheme support.
{% endcomment %}

{%- style -%}
  .apple-watch-videos-{{ section.id }}{
    padding-top: {{ section.settings.padding_top | plus: 40 }}px;
    padding-bottom: {{ section.settings.padding_bottom | plus: 40 }}px;
  }

  .apple-watch-videos-{{ section.id }} .apple-watch-videos{
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* LEFT aligned header */
  .apple-watch-videos-{{ section.id }} .apple-watch-videos__header{
    text-align: left;
    margin: 0 0 56px 0;
    max-width: 760px;
  }

  .apple-watch-videos-{{ section.id }} .apple-watch-videos__heading{
    font-size: 34px;
    margin: 0 0 10px 0;
  }

  .apple-watch-videos-{{ section.id }} .apple-watch-videos__subtitle{
    margin: 0;
    font-size: 16px;
    line-height: 1.5;
    opacity: 0.85;
  }

  .apple-watch-videos-{{ section.id }} .apple-watch-videos__grid{
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 40px;
  }

  .apple-watch-videos-{{ section.id }} .apple-watch-videos__card{
    width: 100%;
  }

  .apple-watch-videos-{{ section.id }} .apple-watch-videos__item{
    position: relative;
    padding-bottom: 177.78%;
    border-radius: 12px;
    overflow: hidden;
    background: #000;
  }

  .apple-watch-videos-{{ section.id }} .apple-watch-videos__item iframe{
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  .apple-watch-videos-{{ section.id }} .apple-watch-videos__title{
    margin: 12px 0 0 0;
    font-size: 16px;
    line-height: 1.3;
  }
{%- endstyle -%}

<section class="apple-watch-videos-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    <div class="apple-watch-videos">

      <div class="apple-watch-videos__header">
        <h2 class="apple-watch-videos__heading">
          {{ section.settings.heading | escape }}
        </h2>

        <p class="apple-watch-videos__subtitle">
          {{ section.settings.subtitle | escape }}
        </p>
      </div>

      <div class="apple-watch-videos__grid">

        <div class="apple-watch-videos__card">
          <div class="apple-watch-videos__item">
            <iframe
              src="https://www.youtube.com/embed/7yrJjsdlegw"
              title="Apple Watch Video 1"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen
            ></iframe>
          </div>
          <p class="apple-watch-videos__title">
            {{ section.settings.video_1_title | escape }}
          </p>
        </div>

        <div class="apple-watch-videos__card">
          <div class="apple-watch-videos__item">
            <iframe
              src="https://www.youtube.com/embed/vqOHcqvPDX8"
              title="Apple Watch Video 2"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen
            ></iframe>
          </div>
          <p class="apple-watch-videos__title">
            {{ section.settings.video_2_title | escape }}
          </p>
        </div>

        <div class="apple-watch-videos__card">
          <div class="apple-watch-videos__item">
            <iframe
              src="https://www.youtube.com/embed/oTaCDfLWTfQ"
              title="Apple Watch Video 3"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen
            ></iframe>
          </div>
          <p class="apple-watch-videos__title">
            {{ section.settings.video_3_title | escape }}
          </p>
        </div>

      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Apple Watch Videos",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Title",
      "default": "Behind the scenes"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Watch our videos to understand common repair issues, what to expect, and how we fix your device with care."
    },
    {
      "type": "text",
      "id": "video_1_title",
      "label": "Video 1 title",
      "default": "Repair your Watch, do not replace it."
    },
    {
      "type": "text",
      "id": "video_2_title",
      "label": "Video 2 title",
      "default": "Treat your rear glass with care."
    },
    {
      "type": "text",
      "id": "video_3_title",
      "label": "Video 3 title",
      "default": "We care about sustainability."
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Apple Watch Videos"
    }
  ]
}
{% endschema %}