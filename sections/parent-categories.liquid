<section class="parent-categories-{{ section.id }}">
  <div class="parent-categories-wrapper page-width">
    <div class="parent-categories-info">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.details }}</p>
      <a href="{{ section.settings.btn_link }}" class="read-more">{{ section.settings.btn_text }}</a>
    </div>
    <div class="parent-category-row">
      {% for block in section.blocks %}
        <div class="parent-category-col col-{{ section.settings.column_per_row }}">
          <img src="{{ block.settings.img | img_url: 'master' }}" alt="{{ block.settings.title }}">
          <h3>{{ block.settings.title }}</h3>
          <div class="repair-services-btn">
            <p>{{ block.settings.price }}</p>
            <a href="{{ block.settings.link }}">{{ block.settings.btn }}</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .parent-categories-wrapper .hidden {
    display: none;
  }
  .show-more-btn {
    display: inline-block;
    margin-top: 20px;
