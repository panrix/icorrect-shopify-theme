<section class="lp-faqs-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="lp-faqs-wrapper page-width">
    <div class="lp-faqs-header">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.details }}</p>
    </div>

    <div class="accordions-row-wrapper">
      {% for block in section.blocks %}
        <div
          style="text-align:{{ block.settings.alignment }};"
          class="faq-col-icorrect"
          {{ block.shopify_attributes }}
        >
          <h3 class="accordion-{{ section.id }}">{{ block.settings.heading }}</h3>
          <div class="panel-accordion">
            {{ block.settings.sub_head }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .lp-faqs-{{ section.id }}{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    width: 100%;
    background-color: {{ section.settings.bg }};
  }
  .lp-faqs-{{ section.id }} .lp-faqs-header{
    width: 100%;
    padding-bottom: 20px;
    max-width: 760px;
  }
  .lp-faqs-{{ section.id }} .lp-faqs-header h2{
    font-size: 28px;
    font-weight: 600;
    line-height: 45.67px;
    text-align: left;
    color: {{ section.settings.txt_clr }};
    margin: 0;
    padding: 0 0 10px 0;
  }
  .lp-faqs-{{ section.id }} .lp-faqs-header p{
    font-size: 18px;
    font-weight: 400;
    line-height: 30px;
    letter-spacing: 0.05em;
    text-align: left;
    color: {{ section.settings.txt_clr }};
    margin: 0;
    padding: 0;
  }

  .lp-faqs-{{ section.id }} .accordions-row-wrapper{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: flex-start;
    gap: 24px;
  }
  .lp-faqs-{{ section.id }} .faq-col-icorrect{
    flex: 1 1 calc(50% - 12px);
    max-width: calc(50% - 12px);
  }

  .lp-faqs-{{ section.id }} .accordion-{{ section.id }}{
    cursor: pointer;
    padding: 10px 2px;
    width: 100%;
    border: none;
    outline: none;
    transition: 0.2s;
    color: {{ section.settings.txt_clr }};
    font-size: 18px;
    font-weight: 600;
    line-height: 19px;
    letter-spacing: 0.05em;
    text-align: left;
    margin: 15px 0;
    background: transparent;
  }

  .lp-faqs-{{ section.id }} .accordion-{{ section.id }}:after{
    content: "";
    float: right;
    margin-left: 5px;
    background-image: url('https://cdn.shopify.com/s/files/1/0754/5903/5403/files/Group.png?v=1723514804');
    {% if section.settings.txt_clr == '#1d1d1f' %}
      filter: invert(1);
    {% endif %}
    background-repeat: no-repeat;
    background-size: contain;
    width: 16px;
    height: 16px;
    min-height: 16px;
  }

  .lp-faqs-{{ section.id }} .active-accordion:after{
    content: "";
    background-image: url('https://cdn.shopify.com/s/files/1/0754/5903/5403/files/Vector.png?v=1723514794');
    background-repeat: no-repeat;
    min-height: 16px;
  }

  .lp-faqs-{{ section.id }} .panel-accordion{
    padding: 0 5px;
    background-color: transparent;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.35s ease;
    font-size: 16px;
    font-weight: 400;
    line-height: 24px;
    text-align: left;
    color: {{ section.settings.txt_clr }};
    border-bottom: 1px solid {{ section.settings.txt_clr }};
  }
  .lp-faqs-{{ section.id }} .panel-accordion p{
    margin: 0 0 18px 0;
  }

  @media(max-width: 767px){
    .lp-faqs-{{ section.id }}{
      padding-top: {{ section.settings.mob_padding_top }}px;
      padding-bottom: {{ section.settings.mob_padding_bottom }}px;
    }
    .lp-faqs-{{ section.id }} .faq-col-icorrect{
      flex: 1 1 100%;
      max-width: 100%;
    }
    .lp-faqs-{{ section.id }} .lp-faqs-header h2{
      font-size: 24px;
      font-weight: 600;
      line-height: 36px;
    }
    .lp-faqs-{{ section.id }} .lp-faqs-header p{
      font-size: 14px;
      font-weight: 400;
      line-height: 20px;
      letter-spacing: 0.05em;
      text-align: left;
    }
  }
  @media(max-width: 500px){
    .lp-faqs-{{ section.id }} .accordion-{{ section.id }}{
      padding: 10px 20px 10px 2px;
      position: relative;
    }
    .lp-faqs-{{ section.id }} .accordion-{{ section.id }}:after{
      position: absolute;
      right: 0;
      top: 50%;
      transform: translateY(-50%);
    }
  }
</style>

<script>
  (function(){
    var root = document.querySelector('.lp-faqs-{{ section.id }}');
    if (!root) return;

    var acc = root.getElementsByClassName('accordion-{{ section.id }}');
    for (var i = 0; i < acc.length; i++) {
      acc[i].addEventListener('click', function() {
        this.classList.toggle('active-accordion');
        var panel = this.nextElementSibling;
        if (!panel) return;

        if (panel.style.maxHeight) {
          panel.style.maxHeight = null;
        } else {
          panel.style.maxHeight = panel.scrollHeight + 'px';
        }
      });
    }
  })();
</script>

