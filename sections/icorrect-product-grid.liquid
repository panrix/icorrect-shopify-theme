<section class="repair-collection-section" id="section-{{ section.id }}">
  <div class="page-width">
    
    <div class="repair-section-header">
      <h1>{{ collection.title | escape }}</h1>
      {% if collection.description != blank %}
        <div class="repair-section-desc">
          {{ collection.description }}
        </div>
      {% endif %}
    </div>

    <div class="repair-grid">
      {%- for product in collection.products -%}
        <div class="repair-card">
          
          <div class="repair-card__image-wrapper">
            <a href="{{ product.url }}">
              {% if product.featured_image %}
                <img 
                  src="{{ product.featured_image | img_url: 'master' }}" 
                  alt="{{ product.title | escape }}"
                  loading="lazy"
                >
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </a>
          </div>

          <div class="repair-card__content">
            <h3 class="repair-card__title">
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h3>

            {% unless product.metafields.custom.product_features.value == blank %}
              <div class="repair-card__features"> 
                {% for feature in product.metafields.custom.product_features.value %}
                  <span class="feature-tag">{{ feature }}</span>
                {% endfor %}
              </div>
            {% endunless %}

            <div class="repair-card__footer">
              <div class="repair-card__price">
                {{ product.price | money }}
              </div>
              <a href="{{ product.url }}" class="repair-btn">Book Repair</a>
            </div>
          </div>

        </div>
      {%- endfor -%}
    </div>

  </div>
</section>

<style>
  /* --- Scoped Variables --- */
  #section-{{ section.id }} {
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
    background-color: {{ section.settings.bg }};
    --text-color: #1d1d1f;
    --btn-bg: #1d1d1f;
    --btn-text: #ffffff;
    --radius-lg: 16px;
    --radius-sm: 24px;
    --card-img-bg: #F1F1F1; /* Restored original grey */
  }

  /* --- Header Styling (Unique Class) --- */
  .repair-section-header {
    text-align: center;
    max-width: 650px;
    margin: 0 auto 40px auto;
  }
  .repair-section-header h1 {
    font-size: 28px;
    font-weight: 600;
    line-height: 1.3;
    color: var(--text-color);
    margin: 0 0 10px 0;
    padding: 0;
  }
  .repair-section-desc {
    font-size: 14px;
    line-height: 1.5;
    color: var(--text-color);
    opacity: 0.8;
  }

  /* --- Grid Layout --- */
  .repair-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); 
    gap: 30px; 
    align-items: stretch; /* Ensures equal height */
  }

  /* --- Card Styling --- */
  .repair-card {
    display: flex;
    flex-direction: column;
    height: 100%; 
  }

  /* Image Wrapper - NO Padding, Full Width */
  .repair-card__image-wrapper {
    width: 100%;
    background: var(--card-img-bg);
    border-radius: var(--radius-lg);
    overflow: hidden;
    margin-bottom: 20px;
    /* Aspect ratio protection optional, but removed to avoid "bezel" if image sizes vary slightly */
  }
  
  .repair-card__image-wrapper a {
    display: block;
    width: 100%;
  }

  .repair-card__image-wrapper img {
    display: block;
    width: 100%;
    height: auto; /* Natural height */
    margin: 0;
    padding: 0; /* Removed the padding causing the bezel */
    transition: transform 0.3s ease;
  }

  .repair-card__image-wrapper:hover img {
    transform: scale(1.03);
  }

  /* Content */
  .repair-card__content {
    display: flex;
    flex-direction: column;
    flex-grow: 1; 
    padding: 0 5px; /* Slight gutter for text alignment */
  }

  .repair-card__title {
    font-size: 18px;
    font-weight: 600;
    line-height: 1.4;
    color: var(--text-color);
    margin: 0 0 10px 0;
    /* Ensures 2 lines of text height even if title is short, keeps buttons aligned */
    min-height: 50px; 
  }
  .repair-card__title a {
    text-decoration: none;
    color: inherit;
  }

  /* Features */
  .repair-card__features {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 15px;
  }
  .feature-tag {
    font-size: 12px;
    background: #fff;
    border: 1px solid #e1e1e1;
    border-radius: 12px;
    padding: 4px 12px;
    color: #666;
  }

  /* Footer (Price + Button) */
  .repair-card__footer {
    margin-top: auto; 
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .repair-card__price {
    font-size: 20px;
    font-weight: 500;
    color: var(--text-color);
  }

  .repair-btn {
    display: block;
    width: 100%;
    background-color: var(--btn-bg);
    color: var(--btn-text);
    text-align: center;
    padding: 12px 0;
    border-radius: var(--radius-sm);
    text-decoration: none;
    font-size: 16px;
    transition: opacity 0.2s ease;
  }
  .repair-btn:hover {
    opacity: 0.9;
  }

  /* --- Responsive --- */
  @media(max-width: 990px) {
    .repair-grid {
      grid-template-columns: repeat(2, 1fr); 
      gap: 20px;
    }
  }

  @media(max-width: 767px) {
    #section-{{ section.id }} {
      padding-top: {{ section.settings.mob-padding-top }}px;
      padding-bottom: {{ section.settings.mob-padding-bottom }}px;
    }
    .repair-grid {
      grid-template-columns: 1fr; 
      gap: 40px;
    }
    .repair-section-header h1 {
      font-size: 24px;
    }
    .repair-card__title {
      min-height: auto; 
    }
  }
</style>

