{% comment %}
  Section: iPad Videos
  Fixed 3 YouTube Shorts embeds, with editable heading + subtitle, and Shopify color scheme support.
{% endcomment %}

{%- style -%}
  .ipad-videos-{{ section.id }}{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  /* Make the section wider */
  .ipad-videos-{{ section.id }} .page-width{
    max-width: 1400px;
  }

  .ipad-videos-{{ section.id }} .ipad-videos{
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* LEFT aligned header */
  .ipad-videos-{{ section.id }} .ipad-videos__header{
    text-align: left;
    margin: 0 0 40px 0;
    max-width: 760px;
  }

  .ipad-videos-{{ section.id }} .ipad-videos__heading{
    font-size: 34px;
    margin: 0 0 10px 0;
  }

  .ipad-videos-{{ section.id }} .ipad-videos__subtitle{
    margin: 0;
    font-size: 16px;
    line-height: 1.5;
    opacity: 0.85;
  }

  .ipad-videos-{{ section.id }} .ipad-videos__grid{
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 40px;
  }

  .ipad-videos-{{ section.id }} .ipad-videos__card{
    width: 100%;
  }

  /* 9:16 vertical container */
  .ipad-videos-{{ section.id }} .ipad-videos__item{
    position: relative;
    padding-bottom: 177.78%;
    border-radius: 12px;
    overflow: hidden;
    background: #000;
  }

  .ipad-videos-{{ section.id }} .ipad-videos__item iframe{
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  .ipad-videos-{{ section.id }} .ipad-videos__title{
    margin: 12px 0 0 0;
    font-size: 16px;
    line-height: 1.3;
  }
{%- endstyle -%}

<section class="ipad-videos-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    <div class="ipad-videos">

      <div class="ipad-videos__header">
        <h2 class="ipad-videos__heading">
          {{ section.settings.heading | escape }}
        </h2>

        {%- if section.settings.subtitle != blank -%}
          <p class="ipad-videos__subtitle">
            {{ section.settings.subtitle | escape }}
          </p>
        {%- endif -%}
      </div>

      <div class="ipad-videos__grid">
        <div class="ipad-videos__card">
          <div class="ipad-videos__item">
            <iframe
              src="https://www.youtube.com/embed/0sWmBNj6Eok"
              title="iPad Video 1"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen
            ></iframe>
          </div>
          <p class="ipad-videos__title">
            {{ section.settings.video_1_title | escape }}
          </p>
        </div>

        <div class="ipad-videos__card">
          <div class="ipad-videos__item">
            <iframe
              src="https://www.youtube.com/embed/qjF_l1P_fdc"
              title="iPad Video 2"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen
            ></iframe>
          </div>
          <p class="ipad-videos__title">
            {{ section.settings.video_2_title | escape }}
          </p>
        </div>

        <div class="ipad-videos__card">
          <div class="ipad-videos__item">
            <iframe
              src="https://www.youtube.com/embed/-yFJAgPt7Z4"
              title="iPad Video 3"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen
            ></iframe>
          </div>
          <p class="ipad-videos__title">
            {{ section.settings.video_3_title | escape }}
          </p>
        </div>
      </div>

    </div>
  </div>
</section>

{% schema %}
{
  "name": "iPad Videos",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Title",
      "default": "Behind the scenes"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Watch our videos to understand common repair issues, what to expect, and how we fix your device with care."
    },
    {
      "type": "text",
      "id": "video_1_title",
      "label": "Video 1 title (under video)",
      "default": "Your Pencil will work after the repair."
    },
    {
      "type": "text",
      "id": "video_2_title",
      "label": "Video 2 title (under video)",
      "default": "We repair what Apple cannot."
    },
    {
      "type": "text",
      "id": "video_3_title",
      "label": "Video 3 title (under video)",
      "default": "We can bring your iPad back to life."
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "iPad Videos"
    }
  ]
}
{% endschema %}