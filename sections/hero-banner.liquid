<style>
  .hero-banner-{{ section.id }} {
    position: relative;
    min-height: {{ section.settings.section_height_desktop }}px;
    display: flex;
    align-items: center;
    overflow: hidden;
    background-color: {{ section.settings.background_color }};
  }

  .hero-banner-{{ section.id }} .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .hero-banner-{{ section.id }} .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .hero-banner-{{ section.id }} .hero-container {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 30px 40px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: center;
  }

  .hero-banner-{{ section.id }} .hero-content {
    max-width: 600px;
    text-align: left;
  }

  .hero-banner-{{ section.id }} .hero-eyebrow {
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: {{ section.settings.eyebrow_color }};
    margin-bottom: 20px;
    display: inline-block;
    padding: 10px 20px;
    background: {{ section.settings.eyebrow_bg_color }};
    border-radius: 6px;
  }

  .hero-banner-{{ section.id }} .hero-heading {
    font-size: {{ section.settings.heading_size_desktop }}px;
    font-weight: 700;
    line-height: 1.15;
    margin-bottom: 24px;
  }

  .hero-banner-{{ section.id }} .hero-subheading {
    font-size: {{ section.settings.subheading_size_desktop }}px;
    line-height: 1.6;
    color: {{ section.settings.subheading_color }};
    margin-bottom: 40px;
  }

  .hero-banner-{{ section.id }} .hero-buttons {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  /* Trust section wrapper - ensures divider and logos match trust badges width */
  .hero-banner-{{ section.id }} .hero-trust-section {
    display: inline-flex;
    flex-direction: column;
    margin-top: 28px;
  }

  .hero-banner-{{ section.id }} .hero-trust-indicators {
    display: flex;
    flex-wrap: wrap;
    gap: 32px;
    align-items: center;
  }

  .hero-banner-{{ section.id }} .trust-item {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 15px;
    font-weight: 500;
    color: #1d1d1f;
  }

  .hero-banner-{{ section.id }} .trust-item .stars {
    color: #FFB800;
    font-size: 16px;
    letter-spacing: 1px;
  }

  .hero-banner-{{ section.id }} .trust-item .google-icon {
    width: 18px;
    height: 18px;
    vertical-align: middle;
  }

  .hero-banner-{{ section.id }} .trust-item strong {
    color: #1d1d1f;
    font-weight: 600;
  }

  .hero-banner-{{ section.id }} .trust-divider {
    width: 1px;
    height: 20px;
    background: #d1d1d6;
  }

  .hero-banner-{{ section.id }} .hero-btn {
    display: inline-block;
    padding: 14px 28px;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    border: 2px solid transparent;
  }

  .hero-banner-{{ section.id }} .hero-btn-primary {
    background: {{ section.settings.primary_btn_bg }};
    color: {{ section.settings.primary_btn_color }};
    border-color: {{ section.settings.primary_btn_border }};
  }

  .hero-banner-{{ section.id }} .hero-btn-primary:hover {
    background: {{ section.settings.primary_btn_hover_bg }};
    transform: translateY(-3px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
  }

  .hero-banner-{{ section.id }} .hero-btn-secondary {
    background: {{ section.settings.secondary_btn_bg }};
    color: {{ section.settings.secondary_btn_color }};
    border-color: {{ section.settings.secondary_btn_border }};
  }

  .hero-banner-{{ section.id }} .hero-btn-secondary:hover {
    background: {{ section.settings.secondary_btn_hover_bg }};
    color: {{ section.settings.secondary_btn_hover_color }};
    transform: translateY(-3px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
  }

  .hero-banner-{{ section.id }} .hero-clients {
    display: flex;
    align-items: center;
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px solid rgba(0, 0, 0, 0.08);
    width: 100%;
  }

  .hero-banner-{{ section.id }} .hero-clients-logos {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }

  .hero-banner-{{ section.id }} .hero-clients-logos img {
    height: 16px;
    width: auto;
    opacity: 0.6;
    filter: grayscale(100%);
    transition: all 0.3s ease;
  }

  .hero-banner-{{ section.id }} .hero-clients-logos img:hover {
    opacity: 1;
    filter: grayscale(0%);
  }

  .hero-banner-{{ section.id }} .media-container {
    position: relative;
    width: 100%;
    aspect-ratio: 4 / 3;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }

  .hero-banner-{{ section.id }} .carousel-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .hero-banner-{{ section.id }} .carousel-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.8s ease-in-out;
  }

  .hero-banner-{{ section.id }} .carousel-slide.active {
    opacity: 1;
    z-index: 1;
  }

  .hero-banner-{{ section.id }} .carousel-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .hero-banner-{{ section.id }} .carousel-indicators {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
    z-index: 10;
  }

  .hero-banner-{{ section.id }} .carousel-indicator {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
    padding: 0;
  }

  .hero-banner-{{ section.id }} .carousel-indicator.active {
    background: rgba(255, 255, 255, 1);
    width: 30px;
    border-radius: 5px;
  }

  .hero-banner-{{ section.id }} .media-container img,
  .hero-banner-{{ section.id }} .media-container video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Z-INDEX FIX */
  header,
  .section-header,
  .header-wrapper,
  .shopify-section-group-header-group {
    position: relative !important;
    z-index: 999 !important;
  }

