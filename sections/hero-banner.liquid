<script>
(function(){
  function getHeaderOffset(){
    const v = getComputedStyle(document.documentElement).getPropertyValue('--header-height').trim();
    const n = parseFloat(v);
    return Number.isFinite(n) ? n : 90;
  }

  document.addEventListener('click', function(e){
    const a = e.target.closest('a[data-scroll-to]');
    if(!a) return;

    const sel = a.getAttribute('data-scroll-to');
    const target = document.querySelector(sel);
    if(!target) return;

    // If not on homepage, allow normal navigation to /#find-your-repair
    if(location.pathname !== '/' && !location.pathname.includes('/index')) return;

    e.preventDefault();

    const y = target.getBoundingClientRect().top + window.pageYOffset - (getHeaderOffset() + 20);
    window.scrollTo({ top: y, behavior: 'smooth' });
    history.replaceState(null, '', sel);
  });
})();
</script>
